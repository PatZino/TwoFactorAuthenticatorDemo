@{
    Layout = "~/Views/Shared/_ErrorPage.cshtml";
}

<section>
    <div class="font-attribute centered-text">
        @if (TempData["ErrorMessage"] != null)
        {
            var message = @TempData["ErrorMessage"];
            <h2>@message</h2>
        }
        else
        {
            <h2>OOPS!!! An error occured. Contact your administrator.</h2>
        }
    </div>

    <div class="row">

        <div class="col-md-6"></div>
        <div class="col-md-6">
            <a asp-controller="Home" asp-action="Index" class="btn">Go Home</a>
        </div>
    </div>
</section>
